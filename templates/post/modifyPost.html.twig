{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Edit your post here</h1>
    <div class="card mx-center" style="width: 50rem; margin: auto; margin-top: 100px">
        <div class="card-body">

            {{ form_start(form) }}
            <div class="row mx-auto">
                <div class="col-md-4">{{ form_row(form.name, {'label': 'Post Name','attr':{'placeholder':'Post Name'}}) }}</div>
                <div class="col-md-4">{{ form_row(form.description, {'label': 'Description','attr':{'placeholder':'Description'}}) }}</div>
                <div class="col-md-4"> {{ form_row(form.link, {'label': 'Link','attr':{'placeholder':'Link'}}) }}</div>
                <div class="col-md-4"> {{ form_row(form.category, {'label':'Category'}) }}</div>
                

            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Edit your post</button>
            </div>

        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}