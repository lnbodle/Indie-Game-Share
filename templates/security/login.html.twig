{% extends 'base.html.twig' %}

{% block body %}




    <div class="card mx-center" style="width: 18rem; margin: auto; margin-top: 100px;">
        <div class="card-body text-center">
            <h5 class="card-title text-center">
                <h3>Connexion</h3>
            </h5>
            <form action="{{ path('security_login') }}" method="post">

                <div class="form-group">
                    <input type="email" class="form-control" required name="_username" placeholder="Adresse e-mail">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" required name="_password" placeholder="Mot de passe">
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </form>

        </div>
    </div>



{% endblock %}