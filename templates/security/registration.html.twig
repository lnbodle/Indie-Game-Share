{% extends 'base.html.twig' %}

{% block body %}

    <div class="card mx-center" style="width: 18rem; margin: auto; margin-top: 100px">
        <div class="card-body text-center">
            <h5 class="card-title text-center">
                <h3>Inscription</h3>
            </h5>
            {{ form_start(form) }}
            {{ form_row(form.username, {'attr':{'placeholder':'Nom d\'utilisateur'}}) }}
            {{ form_row(form.email, {'attr':{'placeholder':'Email'}}) }}
            {{ form_row(form.password, {'attr':{'placeholder':'Mot de passe'}}) }}
            {{ form_row(form.confirm_password, {'attr':{'placeholder':'Confimer mot de passe'}}) }}
            <button type="submit" class="btn btn-primary">Inscription</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}